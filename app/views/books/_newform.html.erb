<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<%= form_for(book) do |f| %>
				<div class="field row">
					<% if book.errors.any? %>
						<h3 class="message-error"><%= book.errors.count %> errors prohibited this book from being saved:</h3>
						<ul>
						<% book.errors.full_messages.each do |message| %>
							<li><%= message %></li>
						<% end %>
						</ul>
					<% end %>
					<h4>title</h4>
					<%= f.text_field :title, class: "col-xs-12 book_title" %>
				</div>

				<div class="field row">
					<h4>body</h4> <!-- ここを変更 -->
					<%= f.text_area :body, class: "col-xs-12 book_body" %>
				</div>

				<div class="actions row">

					<%= f.submit class: "btn btn-primary col-xs-12" %>
				</div>
			<% end %>
		</div>
	</div>
</div>